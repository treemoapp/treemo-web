<div class="page-header">
  <%= link_to new_location_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Location
  <% end %>

  <h1>Listing locations close to <%= "#{@coordinates[:lat]} and #{@coordinates[:lng]}" %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User</th>
            <th>Name</th>
            <th>Lat</th>
            <th>Lng</th>
            <th>Miles away</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @locations) do |location| %>
            <td><%= location.user.name %></td>
            <td><%= location.name %></td>
            <td><%= location.lat %></td>
            <td><%= location.lng %></td>
            <td><%= location.respond_to?(:distance) ? number_to_human(location.distance, units: :distance, precision: 2) : nil %></td>
            <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
